<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Paso de datos mediante Serializable"
              android:gravity="center"
              android:padding="10dp"
              android:textSize="@dimen/font_size_titulo"/>

    <Button android:layout_width="@dimen/btn_menu_width"
            android:layout_height="@dimen/btn_menu_height"
            android:text="Nueva Persona"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/btnNuevaPersona"/>

    <Button android:layout_width="@dimen/btn_menu_width"
            android:layout_height="@dimen/btn_menu_height"
            android:text="Listado de Personas"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/btnListadoPersonas"/>

    <Button android:layout_width="@dimen/btn_menu_width"
            android:layout_height="@dimen/btn_menu_height"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Salir"
            android:id="@+id/btnSalir"/>

</LinearLayout>