<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"> 
    
    <LinearLayout android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center">
                  
        <TextView 
            android:id="@+id/textviewTituloNuevoYActualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_titulo"
            android:layout_margin="20dp"
            android:gravity="center"/>
        
	    <TextView 
	        android:id="@+id/textviewUsuario"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/usuario"
	        android:textSize="@dimen/font_size"
	        android:padding="10dp"/>
	    
	    <EditText 
	        android:id="@+id/edittextUsuario"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/edittextUsuario"
	        android:textSize="@dimen/font_size"
	        android:singleLine="true"/>
	    
	    <TextView 
	        android:id="@+id/textviewPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/password"
	        android:textSize="@dimen/font_size"
	        android:padding="10dp"/>
	    
	    <EditText 
	        android:id="@+id/edittextPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/edittextPassword"
	        android:textSize="@dimen/font_size"
	        android:inputType="textPassword"
	        android:singleLine="true"/>
     
	    <Button 
	        android:id="@+id/btnAccionFormulario"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/font_size"
	        android:layout_margin="15dp"
	        android:layout_gravity="center"
	        android:onClick="accionOnClick"/>
	    
    </LinearLayout>
    
</ScrollView>
